<!DOCTYPE html>
<html>
  <head>
    <title>yoshimotos sr-lib</title>
    <%= favicon_link_tag       "favicon.ico" %>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>

  <body>

    <div id=container>
      <nav> <%= render 'layouts/header' %> </nav>

      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

      <div id=content> <%= yield %> </div>

      <div id=footer> <%= render 'layouts/footer' %> </div>
      <div class=clear />
    </div>
  </body>
</html>
